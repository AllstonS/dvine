<div class="container-fluid">
  <div class="row">
    <div class="container">
      <div class="col-lg-12">
        <div class="row">
          <%= form_for @restaurant do |f| %>
          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name %></div>
            
          <div class="field">
            <%= f.label :address %><br />
            <%= f.text_field :address %></div>

          <div class="field">
            <%= f.label :city %><br />
            <%= f.text_field :city %></div>

          <div class="field">
            <%= f.label :state %><br />
            <%= f.text_field :state %></div>

          <div class="field">
            <%= f.label :zip %><br />
            <%= f.text_field :zip %></div>

          <div class="field">
            <%= f.label :phone %><br />
            <%= f.text_field :phone %></div>

          <div class="field">
            <%= f.label :website %><br />
            <%= f.text_field :website %></div>

          <div class="field">
            <%= f.label :latitude %><br />
            <%= f.text_field :latitude %></div>

          <div class="field">
            <%= f.label :longitude %><br />
            <%= f.text_field :longitude %></div>
            <br>
            <%= f.submit %><br><br>
          <% end %>

          <a class="btn btn-primary btn-lg" href="<%= restaurants_path %>" role="button">Return To Restaurants Page Â»</a>
        </div>
      </div>
    </div>
  </div>
</div>